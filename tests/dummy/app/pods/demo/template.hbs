<div class="dummy-body">
  <div class="section">
    <div class="example">
      <div class='title'>
        Confirmation Dialog
      </div>
      <div class="demo">
        {{#frost-modal-dialog
          title='confirmation'
          type='confirmation'
          confirmAlias='Confirm'
          modalName='my-confirm-dialog'
          onClose=(action 'close')
          onConfirmHandler=(action 'confirm')
          onOpen=(action 'open')
        }}
          {{#block-slot slot 'target'}}
            {{frost-button
              priority="primary"
              size="medium"
              text='Confirmation dialog'
            }}
          {{/block-slot}}
          {{#block-slot slot 'body'}}
            Are you sure you want to confirm this action?
          {{/block-slot}}
        {{/frost-modal-dialog}}
      </div>
      <div class='snippet'>
        {{format-markdown "```handlebars
{{#frost-modal-dialog
  title='confirmation'
  type='confirmation'
  confirmAlias='Confirm'
  modalName='my-confirm-dialog'
  onClose=(action 'close')
  onConfirmHandler=(action 'confirm')
  onOpen=(action 'open')
}}
  {{#block-slot slot 'target'}}
    {{frost-button
      priority='primary'
      size='medium'
      text='Confirmation dialog'
    }}
  {{/block-slot}}
  {{#block-slot slot 'body'}}
    Are you sure you want to confirm this action?
  {{/block-slot}}
{{/frost-modal-dialog}}
  ```"
      }}
      </div>
    </div>
  </div>

